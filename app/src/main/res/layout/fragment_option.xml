<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearFifthScreen"
    style="@style/groupStylewhite_A700"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageHelpinghandpn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_358pxv"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription"
        android:src="@drawable/img_helpinghandpn" />

    <LinearLayout
        android:id="@+id/btn_donor"
        style="@style/groupStyleteal_300cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_35pxv"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_marginEnd="@dimen/_33pxv"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDonor"
            style="@style/txtInterblack30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_51pxv"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_48pxv"
            android:layout_marginBottom="@dimen/_13pxv"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@{fifthScreenVM.fifthScreenModel.txtDonor}"
            tools:text="@string/lbl_donor" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNeedy"
        style="@style/btnSolidRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_35pxv"
        android:layout_marginTop="@dimen/_26pxv"
        android:layout_marginEnd="@dimen/_33pxv"
        android:layout_marginBottom="@dimen/_20pxv"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="@dimen/_30pxv"
        android:paddingTop="@dimen/_11pxv"
        android:paddingEnd="@dimen/_30pxv"
        android:paddingBottom="@dimen/_11pxv"
        android:singleLine="true"
        android:text="@string/lbl_needy"
        android:textAllCaps="false"
        tools:text="@string/lbl_needy" />
</LinearLayout>
