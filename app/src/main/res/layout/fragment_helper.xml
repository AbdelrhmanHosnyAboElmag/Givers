<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".app.ui.fragments.HelperFragment">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_uploadfiles1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_upload_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_item" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        style="@style/groupStyleteal_300cornerRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <LinearLayout
        android:id="@+id/linearRowchoosetypeof"
        style="@style/groupStyleteal_300cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/txtChoosetypeof"
            style="@style/txtInterbold16_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15pxv"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_marginBottom="@dimen/_11pxv"
            android:layout_weight="0.85"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/msg_choose_type_of" />

        <ImageView
            android:id="@+id/image5175173378arr"
            android:layout_width="@dimen/_35pxv"
            android:layout_height="@dimen/_27pxv"
            android:layout_marginStart="@dimen/_48pxv"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_marginEnd="@dimen/_6pxv"
            android:layout_marginBottom="@dimen/_8pxv"
            android:scaleType="fitXY"
            android:src="@drawable/img_5175173378arr"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_5175173378arr" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearColumnwritedescripti"
        style="@style/groupStyleteal_300cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearRowchoosetypeof">

        <EditText
            android:id="@+id/txtWriteDescripti"
            style="@style/txtInterbold14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_11pxv"
            android:layout_marginTop="@dimen/_6pxv"
            android:layout_marginEnd="@dimen/_8pxv"
            android:layout_marginBottom="@dimen/_70pxv"
            android:ellipsize="end"
            android:gravity="start"
            android:hint="@string/msg_write_descripti"
            android:singleLine="true" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        style="@style/btnSolidRounded_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="@dimen/_29pxv"
        android:paddingTop="@dimen/_5pxv"
        android:paddingEnd="@dimen/_22pxv"
        android:paddingBottom="@dimen/_5pxv"
        android:singleLine="true"
        android:text="@string/lbl_submit"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearColumnwritedescripti"
        tools:text="@string/lbl_submit" />
</androidx.constraintlayout.widget.ConstraintLayout>